<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Primary_500</item>
        <item name="colorPrimaryDark">@color/Primary_800</item>
        <item name="colorAccent">@color/Secondary_500</item>
        <item name="colorError">@color/error</item>
    </style>

    <!-- My Customized App Theme -->
    <style name="MyAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/Primary_500</item>
        <item name="colorPrimaryDark">@color/Primary_800</item>
        <item name="colorAccent">@color/Secondary_500</item>
        <item name="colorError">@color/error</item>
        <item name="editTextColor">@color/transparent_black_85</item>

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- <item name="toolbarStyle">@style/MyMaterialAppBar</item> -->

        <item name="tabStyle">@style/AppTheme.TabLayout</item>

    </style>

    <!-- <style name="ToolBarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBarOverlay">@null</item>
    </style> -->

    <style name="MyMaterialAppBar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="titleTextColor">@color/Primary_500</item>

    </style>

    <!-- Custom TabLayout -->
    <style name="AppTheme.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@color/white</item>
        <item name="tabIndicatorColor">@color/Primary_500</item>
        <item name="tabIndicatorGravity">bottom</item>
        <item name="tabIndicatorFullWidth">false</item>
    </style>

    <!-- Custom Bottom AppBar -->
    <style name="Widget.MaterialComponents.BottomAppBar.Colored" >
        <item name="android:background">@color/white</item>
    </style>
</resources>
